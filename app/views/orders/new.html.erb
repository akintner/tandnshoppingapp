<%= form_for @order do |f| %>
  <%- if @order.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@order.errors.count, "error") %>
        prohibited this order from being saved:
      </h2>
      <ul>
        <%- @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <p>
    <%= f.fields_for :line_items do |ff| %>
      <%= ff.label :product_id, "Product" %>
      <%= ff.select :product_id, products.map { |p| [p.name, p.id] } %>
    <% end %>
  </p>
  <p>
    <%= f.submit "Purchase" %>
  </p>
<% end %>
