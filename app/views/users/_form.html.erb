<%= render partial: "error_messages", locals: { object: @user } %>

<p>
  <%= form_for @user do |f| %>
    <%= f.label :username %>    
    <%= f.text_field :username, hide_label: true, placeholder: 'username' %>
    <%= f.label :email %>
    <%= f.email_field :email, hide_label: true, placeholder: 'email' %>
    <%= f.label :password %>
    <%= f.password_field :password, hide_label: true, placeholder: 'password' %>

    <%= f.submit %>
  <% end %>
</p>
